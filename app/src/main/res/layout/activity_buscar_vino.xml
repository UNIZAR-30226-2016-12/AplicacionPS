<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a80038"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/valorParametro" />
        <Spinner
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a80038"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/valorBusqueda1" />
        <EditText android:id="@+id/valorBusqueda1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Valor mÃ­nimo del campo"
            android:inputType="text"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a80038"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/valorBusqueda2" />
        <EditText
            android:id="@+id/valorBusqueda2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Valor maximo del campo"
            android:inputType="text"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#e0e0e0">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Buscar"
            android:id="@+id/search"
            android:layout_weight="1"
            android:background="@drawable/boton_redondeado"
            android:textColor="#e0e0e0"
            android:textSize="30dp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>

